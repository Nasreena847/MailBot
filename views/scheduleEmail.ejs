<html>
    <% layout('layout/boilerplate') %>
    <head>
        <link rel="stylesheet" href="/stylesheet/sendEmailForm.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    </head>
    <body>
        <div class="send-form">
             <form action="/schedule-email" method="POST">
                <h2>Schedule Email</h2>
                <label for="toName">Recipient Name:</label>
                <input type="text" id="toName" name="toName" required>
            
                <label for="toEmail">Recipient Email:</label>
                <input type="email" id="toEmail" name="toEmail" required>
                
                <label for="subject">Subject:</label>
                <input type="text" id="subject" name="subject" required>
                
                  
                <label for="sendAt">Send At:</label>
                  <input type="datetime-local" id="sendAt" name="sendAt" required>


                <label for="body">Message:</label>
                <textarea id="body" name="body" required></textarea>
              
                <button class="submit-btn" type="submit">Send Email</button>
            </form>
        </div>
    </body>
</html>
